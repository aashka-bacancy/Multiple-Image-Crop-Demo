<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Images:</strong><br>
  <% (0...@post.images.count).each do |image| %>
    <%= image_tag(@post.images[image], style: "margin:5px; border: 2px solid black") if @post.images.attached?%><br>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
